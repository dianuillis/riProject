<link xlink:type="simple" xlink:href="../643/27643.xml">
Shanghai</link></village>
nese <link xlink:type="simple" xlink:href="../181/506181.xml">
film director</link> <film_director wordnetid="110088200" confidence="0.9173553029164789">
<person wordnetid="100007846" confidence="0.9508927676800064">
<screenwriter wordnetid="110564400" confidence="0.9173553029164789">
<film_maker wordnetid="110088390" confidence="0.9173553029164789">
<link xlink:type="simple" xlink:href="../120/4133120.xml">
Fei Mu</link></film_maker>
</screenwriter>
</person>
</film_director>
