<affair wordnetid="107447261" confidence="0.8">
<event wordnetid="100029378" confidence="0.8">
<funeral wordnetid="107451463" confidence="0.8">
<leader wordnetid="109623038" confidence="0.8">
<causal_agent wordnetid="100007347" confidence="0.8">
<senator wordnetid="110578471" confidence="0.8">
<psychological_feature wordnetid="100023100" confidence="0.8">
<legislator wordnetid="110253995" confidence="0.8">
<link xlink:type="simple" xlink:href="../406/4886406.xml">
John F. Dryden</link></legislator>
</psychological_feature>
