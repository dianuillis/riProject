<noise wordnetid="107387509" confidence="0.8">
<message wordnetid="106598915" confidence="0.8">
<defamation wordnetid="106719579" confidence="0.8">
<disrespect wordnetid="106714976" confidence="0.8">
<sound wordnetid="107371293" confidence="0.8">
<event wordnetid="100029378" confidence="0.8">
<name wordnetid="106720964" confidence="0.8">
<boom wordnetid="107377682" confidence="0.8">
<group wordnetid="100031264" confidence="0.8">
<psychological_feature wordnetid="100023100" confidence="0.8">
<link xlink:type="simple" xlink:href="../155/369155.xml">
Roaring Twenties</link></psychological_feature>
</group>
</boom>
</name>
</event>
</sound>
</disrespect>
