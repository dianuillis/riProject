, <site wordnetid="108651247" confidence="0.9508927676800064">
<village wordnetid="108672738" confidence="0.9508927676800064">
<link xlink:type="simple" xlink:href="../914/8914.xml">
Damascus</link></village>
</site>
 and <site wordnetid="108651247" confidence="0.8">
<region wordnetid="108630039" confidence="0.8">
<region wordnetid="108630985" confidence="0.8">
<administrative_district wordnetid="108491826" confidence="0.8">
