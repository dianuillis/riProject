<worker wordnetid="109632518" confidence="0.8">
<causal_agent wordnetid="100007347" confidence="0.8">
<teacher wordnetid="110694258" confidence="0.8">
<link xlink:type="simple" xlink:href="../227/18701227.xml">
Ken Barlow</link></teacher>
</causal_agent>
</worker>
</editor>
</unfortunate>
</schoolteacher>
</prisoner>
</educator>
